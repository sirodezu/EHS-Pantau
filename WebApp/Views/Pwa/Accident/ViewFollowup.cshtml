@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/Pwa/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.AccidentFollowupModel.ViewModel;
	ViewData["Title"] = ViewData["TitleHeader"];
}
<div class="panel panel-form">
	<div class="panel-container">
		<div class="panel-heading">
			<div class="title-header">@ViewData["TitleHeader"]</div>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-lg-12">

                    <div id="form_item_id" class="form-group-none">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                  </div>

                    <div id="form_item_acc_id" class="form-group-none">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "acc_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_acc_id" class="form-item-view">@Html.Raw(fieldModel.acc_id)</div>
                  </div>

                    <div id="form_item_followup_accident_id" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "followup_accident_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_followup_accident_id" class="form-item-view">@Html.Raw(fieldModel.followup_accident_id_text)</div>
                  </div>

                    <div id="form_item_deskripsi_tindak_lanjut" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "deskripsi_tindak_lanjut")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_deskripsi_tindak_lanjut" class="form-item-view">@Html.Raw(fieldModel.deskripsi_tindak_lanjut)</div>
                  </div>

                    <div id="form_item_due_date" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "due_date")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_due_date" class="form-item-view">@Html.Raw(fieldModel.due_date)</div>
                  </div>

                    <div id="form_item_status_followup_id" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_acc_followup", "status_followup_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_status_followup_id" class="form-item-view">@Html.Raw(fieldModel.status_followup_id_text)</div>
                  </div>

				</div>
			</div>
		</div>
		<div class="panel-footer">
			<a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
		</div>
	</div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ta_acc_followup").data("kendoWindow")) { window.parent.$("#dialog_ta_acc_followup").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>