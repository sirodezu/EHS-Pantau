                    <div id="view_item_cat_id" class="form-item-view">@Html.Raw(fieldModel.cat_id_text)</div>
                </div>

                <div id="form_item_id" class="form-item-none">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_literal_data", "id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                </div>

                <div id="form_item_kode" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_literal_data", "kode")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_kode" class="form-item-view">@Html.Raw(fieldModel.kode)</div>
                </div>

                <div id="form_item_nama" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_literal_data", "nama")</div>
                    <div class="form-item-separator">:</div>
