                                   function onChange_kategori_perizinan_id() {if ($("#kategori_perizinan_id").data("kendoComboBox").value() != '' && $("#kategori_perizinan_id").data("kendoComboBox")._oldIndex == -1) {$("#kategori_perizinan_id").data("kendoComboBox").value('');}
