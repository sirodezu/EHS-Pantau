@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.FasSpekTpsLb3LayoutModel.ViewModel;
    ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "fasspektpslb3layout";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}

<form id="form_edit" method="post" class="panel-form">
    <div class="panel">
        <div class="panel-heading">
            <div class="title-header">@ViewData["TitleHeader"]</div>
        </div>
		<div class="panel-container">
			<div class="panel-content">
				<div class="row">
					<div class="col-lg-12">
                        <div id="form_item_id" class="form-group-none">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "id")<span id="label_req_id" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_id" class="form-item-field">
                               <input type="number" id="id" name="id" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout","id"))" style ="width:200px;" />
                               <span class="k-invalid-msg" data-for="id"></span>
                               <input type="hidden" id="id_old" name="id_old" value="@fieldModel.id" />
                               <script>
                                   $("#id").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                   $(document).ready(function () {$("#id").data('kendoNumericTextBox').value('@fieldModel.id');})
                               </script>
                           </div>
                       </div>

                        <div id="form_item_spek_tps_lb3_id" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "spek_tps_lb3_id")<span id="label_req_spek_tps_lb3_id" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_spek_tps_lb3_id" class="form-item-field">
                               <input type="number" id="spek_tps_lb3_id" name="spek_tps_lb3_id" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout","spek_tps_lb3_id"))" style ="width:200px;" />
                               <span class="k-invalid-msg" data-for="spek_tps_lb3_id"></span>
                               <script>
                                   $("#spek_tps_lb3_id").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                   $(document).ready(function () {$("#spek_tps_lb3_id").data('kendoNumericTextBox').value('@fieldModel.spek_tps_lb3_id');})
                               </script>
                           </div>
                       </div>

                       <div id="form_item_file_name" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "file_name")<span id="label_req_file_name" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_file_name" class="form-item-field">
                               <textarea type="text" id="file_name" name="file_name" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout","file_name"))" maxlength="255" style="width:350px;" title="@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "file_name") @ResxHelper.GetValue("Message", "IsNotValidCharacter")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")">@Html.Raw(fieldModel.file_name)</textarea>
                               <span class="k-invalid-msg" data-for="file_name"></span>
                           </div>
                       </div>

                       <div id="form_item_file_path" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "file_path")<span id="label_req_file_path" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_file_path" class="form-item-field">
                               <textarea type="text" id="file_path" name="file_path" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout","file_path"))" maxlength="4000" style="width:350px;" title="@ResxHelper.GetValue("ta_fas_spek_tps_lb3_layout", "file_path") @ResxHelper.GetValue("Message", "IsNotValidCharacter")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")">@Html.Raw(fieldModel.file_path)</textarea>
                               <span class="k-invalid-msg" data-for="file_path"></span>
                           </div>
                       </div>
                  <div class="form-group"></div>
                    
					</div>
				</div>
			</div>
			<div class="panel-footer">
				<a id="cancel" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCancelText">@ResxHelper.GetValue("Message", "Cancel")</span></a>
				<a id="save" class="k-button k-button-icontext" href="#"><i class="fas fa-save"></i>&nbsp;<span id="btnSaveText">@ResxHelper.GetValue("Message", "Save")</span></a>
			</div>
		</div>
    </div>
</form>

<script>
    var form_type = '@ViewData["form_type"]';
    function ShowHideColumn(form_type)
    {
        if(form_type=='Add')
        {
            var hiden_column = [];
            for (i = 0; i < hiden_column.length; i++) {
                $("#form_item_"+hiden_column[i]).hide();
            }
        }
        else if(form_type=='Edit')
        {
            var hiden_column = [];
            for (i = 0; i < hiden_column.length; i++) {
                $("#form_item_"+hiden_column[i]).hide();
            }
        }
    }
    function setReadOnly(form_type,opt)
    {
        if(opt==true)
        {
            if(form_type=='Add')
            {

