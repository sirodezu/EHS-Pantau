                        <div id="form_item_allow_add" class="form-item">
                            <div class="form-item-label200">@ResxHelper.GetValue("ref_literal_kategori", "allow_add")<span id="label_req_allow_add" class="required"> *</span></div>
                            <div class="form-item-separator">:</div>
                            <div id="field_item_allow_add" class="form-item-field">
                                <input id="allow_add" name="allow_add" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ref_literal_kategori","allow_add"))" style="width:120px;" />
                                <span class="k-invalid-msg" data-for="allow_add"></span>
                                <script>
                                var allow_add_ds = [{value:"1",text:"Ya"},{value:"0",text:"Tidak"}];
                                var allow_add = $("#allow_add").kendoComboBox({ filter: "contains", placeholder: "", dataTextField: "text", dataValueField: "value", change: onChange_allow_add, dataSource: allow_add_ds }).data("kendoComboBox");
                                $(document).ready(function () { $("#allow_add").data("kendoComboBox").value('@fieldModel.allow_add'); });
                                function onChange_allow_add() {
                                    if ($("#allow_add").data("kendoComboBox").value() != '' && $("#allow_add").data("kendoComboBox")._oldIndex == -1) { $("#allow_add").data("kendoComboBox").value(''); }
                                }
                                </script>
                            </div>
                        </div>
                        <div id="form_item_ordinal" class="form-item">
                            <div class="form-item-label200">@ResxHelper.GetValue("ref_literal_kategori", "ordinal")<span id="label_req_ordinal" class="required"> *</span></div>
                            <div class="form-item-separator">:</div>
                            <div id="field_item_ordinal" class="form-item-field">
                                <input type="number" id="ordinal" name="ordinal" min="0" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ref_literal_kategori","ordinal"))" style="width:200px;" />
                                <span class="k-invalid-msg" data-for="ordinal"></span>
                                <script>
                                $("#ordinal").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                $(document).ready(function () {$("#ordinal").data('kendoNumericTextBox').value('@fieldModel.ordinal');})
                                </script>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a id="cancel" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCancelText">@ResxHelper.GetValue("Message", "Cancel")</span></a>
                <a id="save" class="k-button k-button-icontext" href="#"><i class="fas fa-save"></i>&nbsp;<span id="btnSaveText">@ResxHelper.GetValue("Message", "Save")</span></a>
            </div>
        </div>
        
    </div>
</form>

