@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.ManPowerRiwayatKerjaModel.ViewModel;
    ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "manpowerriwayatkerja";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}

<form id="form_edit" method="post" class="panel-form">
    <div class="panel">
        <div class="panel-heading">
            <div class="title-header">@ViewData["TitleHeader"]</div>
        </div>
		<div class="panel-container">
			<div class="panel-content">
				<div class="row">
					<div class="col-lg-12">
                        <div id="form_item_id" class="form-group-none">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "id")<span id="label_req_id" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_id" class="form-item-field">
                               <input type="number" id="id" name="id"  min="0" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","id"))" style ="width:200px;" />
                               <span class="k-invalid-msg" data-for="id"></span>
                               <input type="hidden" id="id_old" name="id_old" value="@fieldModel.id" />
                               <script>
                                   $("#id").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                   $(document).ready(function () {$("#id").data('kendoNumericTextBox').value('@fieldModel.id');})
                               </script>
                           </div>
                       </div>

                        <div id="form_item_mp_id" class="form-group-none">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "mp_id")<span id="label_req_mp_id" class="required"> *</span></div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_mp_id" class="form-item-field">
                               <input type="number" id="mp_id" name="mp_id"  min="0" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","mp_id"))" style ="width:200px;" />
                               <span class="k-invalid-msg" data-for="mp_id"></span>
                               <script>
                                   $("#mp_id").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                   $(document).ready(function () {$("#mp_id").data('kendoNumericTextBox').value('@fieldModel.mp_id');})
                               </script>
                           </div>
                       </div>

                       <div id="form_item_area_name" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "area_name")</div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_area_name" class="form-item-field">
                               <input type="text" id="area_name" name="area_name" class="k-textbox"  data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","area_name"))"  maxlength="50" style="width:350px;" value="@Html.Raw(fieldModel.area_name)" title="@ResxHelper.GetValue("ta_mp_riwayat_kerja", "area_name") @ResxHelper.GetValue("Message", "IsNotValidCharacter")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" />
                               <span class="k-invalid-msg" data-for="area_name"></span>
                           </div>
                       </div>

                       <div id="form_item_nama_customer" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "nama_customer")</div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_nama_customer" class="form-item-field">
                               <input type="text" id="nama_customer" name="nama_customer" class="k-textbox"  data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","nama_customer"))"  maxlength="50" style="width:350px;" value="@Html.Raw(fieldModel.nama_customer)" title="@ResxHelper.GetValue("ta_mp_riwayat_kerja", "nama_customer") @ResxHelper.GetValue("Message", "IsNotValidCharacter")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" />
                               <span class="k-invalid-msg" data-for="nama_customer"></span>
                           </div>
                       </div>

                        <div id="form_item_lama_bekerja_bulan" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "lama_bekerja_bulan")</div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_lama_bekerja_bulan" class="form-item-field">
                               <input type="number" id="lama_bekerja_bulan" name="lama_bekerja_bulan"   min="0" data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","lama_bekerja_bulan"))" style ="width:200px;" />
                               <span class="k-invalid-msg" data-for="lama_bekerja_bulan"></span>
                               <script>
                                   $("#lama_bekerja_bulan").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                   $(document).ready(function () {$("#lama_bekerja_bulan").data('kendoNumericTextBox').value('@fieldModel.lama_bekerja_bulan');})
                               </script>
                           </div>
                       </div>

                       <div id="form_item_pendidikan_terakhir" class="form-group">
                           <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "pendidikan_terakhir")</div>
                           <div class="form-item-separator">:</div>
                           <div id="field_item_pendidikan_terakhir" class="form-item-field">
                               <input type="text" id="pendidikan_terakhir" name="pendidikan_terakhir" class="k-textbox"  data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_mp_riwayat_kerja","pendidikan_terakhir"))"  maxlength="50" style="width:350px;" value="@Html.Raw(fieldModel.pendidikan_terakhir)" title="@ResxHelper.GetValue("ta_mp_riwayat_kerja", "pendidikan_terakhir") @ResxHelper.GetValue("Message", "IsNotValidCharacter")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" />
                               <span class="k-invalid-msg" data-for="pendidikan_terakhir"></span>
                           </div>
                       </div>
                  <div class="form-group"></div>
                    
					</div>
				</div>
			</div>
			<div class="panel-footer">
				<a id="cancel" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCancelText">@ResxHelper.GetValue("Message", "Cancel")</span></a>
				<a id="save" class="k-button k-button-icontext" href="#"><i class="fas fa-save"></i>&nbsp;<span id="btnSaveText">@ResxHelper.GetValue("Message", "Save")</span></a>
			</div>
		</div>
    </div>
</form>

