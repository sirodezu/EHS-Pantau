@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.FasilitasModel.ViewModel;
	ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "fasilitas";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}
<div class="panel panel-form">
	<div class="panel-container">
		<div class="panel-heading">
			<div class="title-header">@ViewData["TitleHeader"]</div>
		</div>
        <div class="panel-content">
            <div class="row">
                <div class="col-lg-12">

                    <div id="form_item_id" class="form-group-none">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                    </div>

                    <div id="form_item_ehs_area_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "ehs_area_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_ehs_area_id" class="form-item-view">@Html.Raw(fieldModel.ehs_area_id_text)</div>
                    </div>

                    <div id="form_item_ba_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "ba_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_ba_id" class="form-item-view">@Html.Raw(fieldModel.ba_id_text)</div>
                    </div>

                    <div id="form_item_pa_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "pa_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_pa_id" class="form-item-view">@Html.Raw(fieldModel.pa_id_text)</div>
                    </div>

                    <div id="form_item_psa_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "psa_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_psa_id" class="form-item-view">@Html.Raw(fieldModel.psa_id_text)</div>
                    </div>

                    <div id="form_item_jenis_fasilitas_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "jenis_fasilitas_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_jenis_fasilitas_id" class="form-item-view">@Html.Raw(fieldModel.jenis_fasilitas_id_text)</div>
                    </div>

                    <div id="form_item_jumlah_fasilitas" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "jumlah_fasilitas")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_jumlah_fasilitas" class="form-item-view">@Html.Raw(fieldModel.jumlah_fasilitas)</div>
                    </div>

                    <div id="form_item_status_kepemilikan_id" class="form-group">
                        <div class="form-item-label220">@ResxHelper.GetValue("ta_fas", "status_kepemilikan_id")</div>
                        <div class="form-item-separator">:</div>
                        <div id="view_item_status_kepemilikan_id" class="form-item-view">@Html.Raw(fieldModel.status_kepemilikan_id_text)</div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @{
                        if (ViewBag.jenis_fasilitas_id == "1")
                        {
                            <partial name="_list_fas_spek_forklift" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "2")
                        {
                            <partial name="_list_fas_spek_steady_crane" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "3")
                        {
                            <partial name="_list_fas_spek_mobil_crane" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "4")
                        {
                            <partial name="_list_fas_spek_lift" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "5")
                        {
                            <partial name="_list_fas_spek_instal_petir" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "6")
                        {
                            <partial name="_list_fas_spek_bejana_tekan" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "7")
                        {
                            <partial name="_list_fas_spek_tangki_timbun" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "8")
                        {
                            <partial name="_list_fas_spek_hydrant" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "9")
                        {
                            <partial name="_list_fas_spek_alarm_kebakaran" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "10")
                        {
                            <partial name="_list_fas_spek_instal_listrik" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "11")
                        {
                            <partial name="_list_fas_spek_genset" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "12")
                        {
                            <partial name="_list_fas_spek_ipal_produksi" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "13")
                        {
                            <partial name="_list_fas_spek_ipal_domestik" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "14")
                        {
                            <partial name="_list_fas_spek_tps_lb3" />
                        }
                        else if (ViewBag.jenis_fasilitas_id == "15")
                        {
                            <partial name="_list_fas_spek_iplc" />
                        }
                    }
                </div>
            </div>
        </div>
		<div class="panel-footer">
			<a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
		</div>
	</div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ta_fas").data("kendoWindow")) { window.parent.$("#dialog_ta_fas").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>