@section ScriptsBlock {
    <script>
		var param_ta_legal = @Html.Raw(JsonConvert.SerializeObject(WebApp.Models.LegalModel.GetListParam()));
		var displayName_ta_legal = @Html.Raw(JsonConvert.SerializeObject(WebApp.Models.LegalModel.GetDisplayItem()));
		var pkKey_ta_legal = @Html.Raw(JsonConvert.SerializeObject(WebApp.Models.LegalModel._pkKey));
		var j_data_ta_legal = @Html.Raw(JsonConvert.SerializeObject(WebApp.Models.LegalModel.GetGridColumn()));
		var colNameTooltip_ta_legal = [];
		var colbuttonCount_ta_legal = 0;
		var columnWidth = 40;
		colbuttonCount_ta_legal += param_ta_legal.btnView == 1 ? 1 : 0;
		colbuttonCount_ta_legal += param_ta_legal.btnEdit== "1" ? 1 : 0;
		colbuttonCount_ta_legal += param_ta_legal.btnDelete == "1" ? 1 : 0;
		colbuttonCount_ta_legal += param_ta_legal.btnCopy  == "1" ? 1 : 0;
