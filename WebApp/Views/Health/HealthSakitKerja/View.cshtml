@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.HealthSakitKerjaModel.ViewModel;
	ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "healthsakitkerja";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}
<div class="panel panel-form">
	<div class="panel-container">
		<div class="panel-heading">
			<div class="title-header">@ViewData["TitleHeader"]</div>
		</div>
		<div class="panel-content">
			<div class="row">
				<div class="col-lg-12">

                    <div id="form_item_id" class="form-group-none">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_health_sakit_kerja", "id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                  </div>

                    <div id="form_item_health_id" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_health_sakit_kerja", "health_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_health_id" class="form-item-view">@Html.Raw(fieldModel.health_id_text)</div>
                  </div>

                    <div id="form_item_resiko_penyakit_akibat_kerja_id" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_health_sakit_kerja", "resiko_penyakit_akibat_kerja_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_resiko_penyakit_akibat_kerja_id" class="form-item-view">@Html.Raw(fieldModel.resiko_penyakit_akibat_kerja_id_text)</div>
                  </div>

                    <div id="form_item_dugaan_paparan_id" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_health_sakit_kerja", "dugaan_paparan_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_dugaan_paparan_id" class="form-item-view">@Html.Raw(fieldModel.dugaan_paparan_id_text)</div>
                  </div>

                    <div id="form_item_deskripsi" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_health_sakit_kerja", "deskripsi")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_deskripsi" class="form-item-view">@Html.Raw(fieldModel.deskripsi)</div>
                  </div>

				</div>
			</div>
		</div>
		<div class="panel-footer">
			<a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
		</div>
	</div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ta_health_sakit_kerja").data("kendoWindow")) { window.parent.$("#dialog_ta_health_sakit_kerja").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>