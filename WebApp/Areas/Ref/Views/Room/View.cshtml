@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Areas.Ref.Models.RoomModel.ViewModel;
	ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "room";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}
<div class="panel panel-form">
	<div class="panel-container">
		<div class="panel-heading">
			<div class="title-header">@ViewData["TitleHeader"]</div>
		</div>
		<div class="panel-content">
			<div class="row">
				<div class="col-lg-12">

                <div id="form_item_id" class="form-item-none">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                </div>

                <div id="form_item_loc_id" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "loc_id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_loc_id" class="form-item-view">@Html.Raw(fieldModel.loc_id_text)</div>
                </div>

                <div id="form_item_kode" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "kode")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_kode" class="form-item-view">@Html.Raw(fieldModel.kode)</div>
                </div>

                <div id="form_item_nama" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "nama")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_nama" class="form-item-view">@Html.Raw(fieldModel.nama)</div>
                </div>

                <div id="form_item_keterangan" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "keterangan")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_keterangan" class="form-item-view">@Html.Raw(fieldModel.keterangan)</div>
                </div>

                <div id="form_item_status_id" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "status_id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_status_id" class="form-item-view">@Html.Raw(fieldModel.status_id_text)</div>
                </div>

                <div id="form_item_start_date" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "start_date")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_start_date" class="form-item-view">@Html.Raw(fieldModel.start_date)</div>
                </div>

                <div id="form_item_end_date" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "end_date")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_end_date" class="form-item-view">@Html.Raw(fieldModel.end_date)</div>
                </div>

                <div id="form_item_sap_otype" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "sap_otype")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_sap_otype" class="form-item-view">@Html.Raw(fieldModel.sap_otype)</div>
                </div>

                <div id="form_item_sap_objid" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "sap_objid")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_sap_objid" class="form-item-view">@Html.Raw(fieldModel.sap_objid)</div>
                </div>

                <div id="form_item_sap_otjid" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "sap_otjid")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_sap_otjid" class="form-item-view">@Html.Raw(fieldModel.sap_otjid)</div>
                </div>

                <div id="form_item_sap_short" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "sap_short")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_sap_short" class="form-item-view">@Html.Raw(fieldModel.sap_short)</div>
                </div>

                <div id="form_item_sap_stext" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_room", "sap_stext")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_sap_stext" class="form-item-view">@Html.Raw(fieldModel.sap_stext)</div>
                </div>

				</div>
			</div>
		</div>
		<div class="panel-footer">
			<a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
		</div>
	</div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ref_room").data("kendoWindow")) { window.parent.$("#dialog_ref_room").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>