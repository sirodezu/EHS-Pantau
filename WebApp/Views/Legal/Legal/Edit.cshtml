                                <input id="kategori_perizinan_id" name="kategori_perizinan_id" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_legal","kategori_perizinan_id"))" style="width:400px;" />
                                <span class="k-invalid-msg" data-for="kategori_perizinan_id"></span>
                                <script>
                                   var kategori_perizinan_id_param = {item : {value:"id",text:"nama"},parent:[], order:[]};
                                   var kategori_perizinan_id_ds = new kendo.data.DataSource({ transport: { read: { url: "@ViewBag.BaseUrl/Ref/KategoriPerizinan/LookupData", dataType: "json", data: kategori_perizinan_id_param, type: "POST" } } });
                                   var kategori_perizinan_id = $("#kategori_perizinan_id").kendoComboBox({ filter: "contains", placeholder: "", dataTextField: "text", dataValueField: "value", dataSource: kategori_perizinan_id_ds, change:onChange_kategori_perizinan_id }).data("kendoComboBox");
