                </div>

                <div id="form_item_cat_kode" class="form-item-none">
                    <div class="form-item-label">@ResxHelper.GetValue("ref_literal_data", "cat_kode")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_cat_kode" class="form-item-view">@Html.Raw(fieldModel.cat_kode)</div>
                </div>

            </div>
        </div>
    </div>
    <div class="card-footer" style="text-align:center">
        <a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
    </div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ref_literal_data").data("kendoWindow")) { window.parent.$("#dialog_ref_literal_data").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>