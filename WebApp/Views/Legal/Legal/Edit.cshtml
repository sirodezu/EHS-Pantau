                                <input id="jenis_perizinan_id" name="jenis_perizinan_id" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("ta_legal","jenis_perizinan_id"))" style="width:400px;" />
