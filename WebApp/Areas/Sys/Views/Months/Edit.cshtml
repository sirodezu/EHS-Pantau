@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Areas.Sys.Models.MonthsModel.ViewModel;
    var baseUrl = ViewData["baseUrl"];
}

<form id="form_edit" method="post">
    <div class="card">
        <div class="card-header">
            <div class="title-header">@ViewData["TitleHeader"]</div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div id="form_item_id" class="form-item-none">
                        <div class="form-item-label">@ResxHelper.GetValue("sys_months", "id")<span id="label_req_id" class="required"> *</span></div>
                        <div class="form-item-separator">:</div>
                        <div id="field_item_id" class="form-item-field">
                            <input type="number" id="id" name="id" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("sys_months","id"))" style ="width:200px;" />
                            <span class="k-invalid-msg" data-for="id"></span>
                            <input type="hidden" id="id_old" name="id_old" value="@fieldModel.id" />
                            <script>
                                $("#id").kendoNumericTextBox({ format: "{0:N0}", decimals: 0 });
                                $(document).ready(function () {$("#id").data('kendoNumericTextBox').value('@fieldModel.id');})
                            </script>
                        </div>
                    </div>

                   <div id="form_item_kode" class="form-item">
                       <div class="form-item-label">@ResxHelper.GetValue("sys_months", "kode")<span id="label_req_kode" class="required"> *</span></div>
                       <div class="form-item-separator">:</div>
                       <div id="field_item_kode" class="form-item-field">
                           <input type="text" title="@ResxHelper.GetValue("sys_months", "kode") @ResxHelper.GetValue("Message", "IsNotValidCharacter","is not valid character input")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" id="kode" name="kode" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("sys_months","kode"))"  maxlength="2" style="width:200px;" value="@fieldModel.kode" />
                           <span class="k-invalid-msg" data-for="kode"></span>
                       </div>
                   </div>

                   <div id="form_item_nama" class="form-item">
                       <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama")<span id="label_req_nama" class="required"> *</span></div>
                       <div class="form-item-separator">:</div>
                       <div id="field_item_nama" class="form-item-field">
                           <input type="text" title="@ResxHelper.GetValue("sys_months", "nama") @ResxHelper.GetValue("Message", "IsNotValidCharacter","is not valid character input")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" id="nama" name="nama" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("sys_months","nama"))"  maxlength="20" style="width:200px;" value="@fieldModel.nama" />
                           <span class="k-invalid-msg" data-for="nama"></span>
                       </div>
                   </div>

                   <div id="form_item_nama3" class="form-item">
                       <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama3")<span id="label_req_nama3" class="required"> *</span></div>
                       <div class="form-item-separator">:</div>
                       <div id="field_item_nama3" class="form-item-field">
                           <input type="text" title="@ResxHelper.GetValue("sys_months", "nama3") @ResxHelper.GetValue("Message", "IsNotValidCharacter","is not valid character input")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" id="nama3" name="nama3" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("sys_months","nama3"))"  maxlength="3" style="width:200px;" value="@fieldModel.nama3" />
                           <span class="k-invalid-msg" data-for="nama3"></span>
                       </div>
                   </div>

                   <div id="form_item_nama_en" class="form-item">
                       <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama_en")<span id="label_req_nama_en" class="required"> *</span></div>
                       <div class="form-item-separator">:</div>
                       <div id="field_item_nama_en" class="form-item-field">
                           <input type="text" title="@ResxHelper.GetValue("sys_months", "nama_en") @ResxHelper.GetValue("Message", "IsNotValidCharacter","is not valid character input")." pattern="@ConfigHelper.GetValue("AllowInputCharacters")" id="nama_en" name="nama_en" class="k-textbox" required data-required-msg="@ResxHelper.GetValue("Message","RequiredTextFormat").Replace("{0}",@ResxHelper.GetValue("sys_months","nama_en"))"  maxlength="20" style="width:200px;" value="@fieldModel.nama_en" />
                           <span class="k-invalid-msg" data-for="nama_en"></span>
                       </div>
                   </div>
                    
                </div>
            </div>
        </div>
        <div class="card-footer" style="text-align:center">
            <a id="cancel" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCancelText">@ResxHelper.GetValue("Message", "Cancel")</span></a>
            <a id="save" class="k-button k-button-icontext" href="#"><i class="fas fa-save"></i>&nbsp;<span id="btnSaveText">@ResxHelper.GetValue("Message", "Save")</span></a>
        </div>
    </div>
</form>

