                                   var jenis_perizinan_id_param = {item : {value:"id",text:"nama"},parent:[{ field: 'kategori_id',opr:'=', value: '@fieldModel.kategori_perizinan_id' }], order:[{ field: 'ordinal', dir: 'asc' }]};
