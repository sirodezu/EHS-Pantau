@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Areas.Sys.Models.MonthsModel.ViewModel;
}
<div class="card">
    <div class="card-header">
        <div class="title-header">@ViewData["TitleHeader"]</div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">

                <div id="form_item_id" class="form-item-none">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_months", "id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_id" class="form-item-view">@fieldModel.id</div>
                </div>

                <div id="form_item_kode" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_months", "kode")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_kode" class="form-item-view">@fieldModel.kode</div>
                </div>

                <div id="form_item_nama" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_nama" class="form-item-view">@fieldModel.nama</div>
                </div>

                <div id="form_item_nama3" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama3")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_nama3" class="form-item-view">@fieldModel.nama3</div>
                </div>

                <div id="form_item_nama_en" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_months", "nama_en")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_nama_en" class="form-item-view">@fieldModel.nama_en</div>
                </div>

            </div>
        </div>
    </div>
    <div class="card-footer" style="text-align:center">
        <a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
    </div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function close_self() { if (window.parent.$("#dialog_sys_months").data("kendoWindow")) { window.parent.$("#dialog_sys_months").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>