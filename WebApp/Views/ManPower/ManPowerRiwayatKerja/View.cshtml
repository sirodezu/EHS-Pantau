@using WebApp
@using Microsoft.AspNetCore.Http;
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Models.ManPowerRiwayatKerjaModel.ViewModel;
	ViewData["Title"] = ViewData["TitleHeader"];
    ViewData["PageName"] = "manpowerriwayatkerja";
    ViewData["Heading"] = ViewData["TitleHeader"];
    ViewData["Category1"] = "";
    ViewData["Category2"] = "";
}
<div class="panel panel-form">
	<div class="panel-container">
		<div class="panel-heading">
			<div class="title-header">@ViewData["TitleHeader"]</div>
		</div>
		<div class="panel-content">
			<div class="row">
				<div class="col-lg-12">

                    <div id="form_item_id" class="form-group-none">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_id" class="form-item-view">@Html.Raw(fieldModel.id)</div>
                  </div>

                    <div id="form_item_mp_id" class="form-group-nonep">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "mp_id")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_mp_id" class="form-item-view">@Html.Raw(fieldModel.mp_id)</div>
                  </div>

                    <div id="form_item_area_name" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "area_name")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_area_name" class="form-item-view">@Html.Raw(fieldModel.area_name)</div>
                  </div>

                    <div id="form_item_nama_customer" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "nama_customer")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_nama_customer" class="form-item-view">@Html.Raw(fieldModel.nama_customer)</div>
                  </div>

                    <div id="form_item_lama_bekerja_bulan" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "lama_bekerja_bulan")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_lama_bekerja_bulan" class="form-item-view">@Html.Raw(fieldModel.lama_bekerja_bulan)</div>
                  </div>

                    <div id="form_item_pendidikan_terakhir" class="form-group">
                      <div class="form-item-label">@ResxHelper.GetValue("ta_mp_riwayat_kerja", "pendidikan_terakhir")</div>
                      <div class="form-item-separator">:</div>
                      <div id="view_item_pendidikan_terakhir" class="form-item-view">@Html.Raw(fieldModel.pendidikan_terakhir)</div>
                  </div>

				</div>
			</div>
		</div>
		<div class="panel-footer">
			<a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
		</div>
	</div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function onCloseDialog(e) { $('#dialog').html(''); }
    function closeDialog() { $("#dialog").data("kendoWindow").close(); }
    function close_self() { if (window.parent.$("#dialog_ta_mp_riwayat_kerja").data("kendoWindow")) { window.parent.$("#dialog_ta_mp_riwayat_kerja").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>