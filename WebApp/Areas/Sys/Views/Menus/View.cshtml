@using WebApp;
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
    var fieldModel = ViewData["fieldModel"] as WebApp.Areas.Sys.Models.MenusModel.ViewModel;
}

<div class="card">
    <div class="card-header">
        <div class="title-header">@ViewData["TitleHeader"]</div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div id="form_item_id" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_menus", "id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_id" class="form-item-view">@fieldModel.id</div>
                </div>
                <div id="form_item_parent_id" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_menus", "parent_id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_parent_id" class="form-item-view">@fieldModel.parent_id</div>
                </div>
                <div id="form_item_name" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_menus", "name")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_name" class="form-item-view">@fieldModel.name</div>
                </div>
                <div id="form_item_label_id" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_menus", "label_id")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_label_id" class="form-item-view">@fieldModel.label_id</div>
                </div>
                <div id="form_item_label_en" class="form-item">
                    <div class="form-item-label">@ResxHelper.GetValue("sys_menus", "label_en")</div>
                    <div class="form-item-separator">:</div>
                    <div id="view_item_label_en" class="form-item-view">@fieldModel.label_en</div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer" style="text-align:center">
        <a id="close" class="k-button k-button-icontext" href="#"><i class="far fa-times-circle"></i>&nbsp;<span id="btnCloseText">@ResxHelper.GetValue("Message", "Close", "Tutup")</span></a>
        <a id="edit" class="k-button k-button-icontext" href="#"><i class="fas fa-edit"></i>&nbsp;<span id="btnEditText">@ResxHelper.GetValue("Message", "Edit", "Edit")</span></a>
    </div>
</div>
<script>
    $("#close").kendoButton();
    $("#close").click(function (e) {
        close_self();
    });
    function close_self() { if (window.parent.$("#dialog_sys_menus").data("kendoWindow")) { window.parent.$("#dialog_sys_menus").data("kendoWindow").close(); } else { window.parent.$("#dialog").data("kendoWindow").close(); } }
</script>

