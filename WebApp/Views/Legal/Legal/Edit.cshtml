                                           $("#periode_telah_dilaporkan_id").data("kendoComboBox").value('');
                                           $('#tanggal_pelaporan').val('');
                                           $('#file_name_bukti_lapor').val('');
                                           $('#file_path_bukti_lapor_file').val('');
                                       }
                                       display_by_type();
                                   }
                                </script>
                            </div>
                        </div>

