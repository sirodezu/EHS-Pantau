                    if (data.status == 1) {
                        window.parent.notification.show({title: data.title, message: kendo.toString(data.message) }, "success");
                        if (window.parent.Reload_list_ta_legal_jenis_izin_ehs_lb3) {
                            window.parent.Reload_list_ta_legal_jenis_izin_ehs_lb3();
                        }else if (window.parent.reload_ta_legal_jenis_izin_ehs_lb3) {
